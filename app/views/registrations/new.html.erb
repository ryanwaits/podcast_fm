<div id="banner" class="podcast-show">
  <header class="cf">
    <div class="wrapper-wide">
      <a href="#" id="logo">Podcast.fm</a>
      <nav>
        <ul>
          <li><a href="#">Explore</a></li>
          <li><a href="#">Sign in</a></li>
          <li><a href="#">Create a podcast</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <div class="signin-header">
    <h1>We're excited for you to join us!</h1>
  </div>
</div>
<div id="form">
  <div class="wrapper-skinny">
    <ul>
      <%= form_for @podcast, url: registration_path do |f| %>
      <li>
        <%= f.text_field :email, placeholder: 'Email' %>
      </li>
      <li>
        <%= f.password_field :password_digest, placeholder: 'Password' %>
      </li>
      <li>
        <%= f.submit 'Sign up', class: 'button button-highlight' %>
      </li>
      <li>
        <a href="#">Already have an account? Sign in</a>
      </li>
      <% end %>
    </ul>
  </div>
</div>